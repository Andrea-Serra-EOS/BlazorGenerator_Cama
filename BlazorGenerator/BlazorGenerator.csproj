<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RepositoryUrl>https://github.com/f4n0/BlazorGenerator</RepositoryUrl>
    <Version>1.2.189.1</Version>
    
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>


    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <AssemblyName>BlazorGenerator</AssemblyName>
    <RootNamespace>BlazorGenerator</RootNamespace>
    <Authors>f4n0</Authors>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Blazorise" Version="1.2.5" />
    <PackageReference Include="Blazorise.Bootstrap5" Version="1.2.5" />
    <PackageReference Include="Blazorise.Components" Version="1.2.5" />
    <PackageReference Include="Blazorise.DataGrid" Version="1.2.5" />
    <PackageReference Include="Blazorise.Generator.Features" Version="1.2.5" />
    <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.2.5" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="7.0.10" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.10" />
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.20.0" />
    <PackageReference Include="Mono.Cecil" Version="0.11.5" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <Title>BlazorGenerator</Title>
    <Description>You think of the models, Blazorgen the Blazor UI. 
This is  a view creator based on fields in models</Description>
    <PackageProjectUrl>https://github.com/f4n0/BlazorGenerator</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>
</Project>