@typeparam T


<DataGridSelectColumn TItem="T"
					  Field="@Field.Name"
					  Caption="@Field.Caption"
					  Sortable="true"
					  Filterable="true" Editable="true" Displayable="@(!Field.EditOnly)">
	<DisplayTemplate>
		<Tooltip Text="@(Field.ToolTip?.Invoke(context) ?? Field.Name)">
			<Text>@((string) Field.Getter(context)?.ToString())</Text>
		</Tooltip>
	</DisplayTemplate>
	<EditTemplate>
		<Select TValue="string"
				SelectedValue="@(Field.Getter(context.Item)?.ToString())"
				SelectedValueChanged="@((v) => { Field.Setter(context.Item, v); 
												context.CellValue = Field.Getter(context.Item);})"
				ReadOnly="@(!Field.Editable)">

			<SelectItem Value="@(string.Empty)">Select ...</SelectItem>
			@foreach (string item in Field.Values)
			{
				<SelectItem Value="@item">@(item.ToString())</SelectItem>
			}
		</Select>
	</EditTemplate>
</DataGridSelectColumn>
@code {
	[Parameter]
	public VisibleField<T> Field { get; set; }
}