@typeparam T


<DataGridColumn TItem="T"
				Field="@Field.Name"
				Caption="@Field.Caption"
				Editable="true"
					   DisplayOrder="@Order"
				Displayable="@(!Field.EditOnly)">
	<DisplayTemplate>
		<Tooltip Text="@(Field.ToolTip?.Invoke(context) ?? Field.Name)">
			<TextEdit Text="@((string) Field.Getter(context)?.ToString())"
					  Placeholder="@Field.Caption"
					  ReadOnly="true">
			</TextEdit>
		</Tooltip>
	</DisplayTemplate>
	<EditTemplate>
		<TextEdit Text="@((string) Field.Getter(context.Item)?.ToString())"
				  TextChanged="@((v) => {
                                                                        Field.Setter(context.Item, v);
                                                                        context.CellValue = Field.Getter(context.Item);
                                                                    })"
				  Placeholder="@Field.Caption">
		</TextEdit>
	</EditTemplate>
</DataGridColumn>

@code {
	[Parameter]
	public VisibleField<T> Field { get; set; }
	[Parameter]
	public int Order { get; set; }
}
