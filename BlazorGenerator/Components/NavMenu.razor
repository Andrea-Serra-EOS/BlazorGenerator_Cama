<Bar Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     Background="Background.Light"
     ThemeContrast="ThemeContrast.Light">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="/">
                <BarIcon IconName="IconName.Dashboard" />
                Home
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            @{

                foreach (var hd in Utils.AttributesUtils.GetModelsWithAttribute<AddToMenuAttribute>())
                {
                    <BarItem>
                        <BarLink To="@hd.Attribute.Route">
                            <BarIcon IconName="@hd.Attribute.Icon" />
                            @hd.Attribute.Title
                        </BarLink>
                    </BarItem>
                }
            }
        </BarStart>
    </BarMenu>
</Bar>