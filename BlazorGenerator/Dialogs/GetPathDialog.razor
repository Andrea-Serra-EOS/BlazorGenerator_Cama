@using System.IO
@inherits BlazorgenBaseComponent


<Card>
    <CardHeader>
        else
        {
            <CardTitle>Upload file</CardTitle>
        }
    </CardHeader>
    <CardBody>
        <FileEdit @ref="FileRef" Changed="OnFileChanged" Filter="@FileFilters" ></FileEdit>
    </CardBody>
</Card>

@code {
    FileEdit FileRef;

    [Parameter]
    public string FileFilters { get; set; }


    List<byte[]> data = new List<byte[]>();

    async Task OnFileChanged(FileChangedEventArgs e)
    {
        ModalSuccess(e.Files.FirstOrDefault().RelativePath);
    }

}
