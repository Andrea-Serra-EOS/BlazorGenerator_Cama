@typeparam T


<Select TValue="string"
		SelectedValue="@(Field.Getter(Data)?.ToString())"
		SelectedValueChanged="@((v) => { Field.Setter(Data, v); })"
        ReadOnly="@(!Field.Editable)" Disabled="@(!Field.Editable)">

	<SelectItem Value="@(string.Empty)">Select ...</SelectItem>
	@foreach (string item in Field.Values)
	{
		<SelectItem Value="@item">@(item.ToString())</SelectItem>
	}
</Select>

@code {
	[Parameter]
	public VisibleField<T> Field { get; set; }

	[Parameter]
	public T Data { get; set; }
}