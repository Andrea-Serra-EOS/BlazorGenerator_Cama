@typeparam T


<DataGridNumericColumn TItem="T"
					   Field="@Field.Name"
					   Caption="@Field.Caption"
					   Sortable="true"
					   DisplayOrder="@Order"
                       Filterable="true" Editable="true" Displayable="@(!Field.EditOnly)" Width="@Field.Width" SortDirection="@Field.Sort" Groupable="@Field.Groupable">
</DataGridNumericColumn>

@code {
	[Parameter]
	public VisibleField<T> Field { get; set; }

	[Parameter]
	public int Order { get; set; }
}